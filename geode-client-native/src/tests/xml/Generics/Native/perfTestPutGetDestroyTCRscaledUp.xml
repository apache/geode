<?xml version="1.0" encoding="UTF-8"?>
<test-driver version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../testDefinition.xsd">

  <data name="timedInterval">60</data>
  <data name="cacheType">CLIENT</data>
  <data name="keySize">
    <list>
      <item>16</item>
      <!--item>32</item>
      <item>64</item>
      <item>128</item>
      <item>256</item-->
    <!--range low="10" high="256"/-->
    </list>
  </data>
  

  <data name="distinctKeys">
    <list>
      <item>10</item>
      <item>1000</item>
      <item>10000</item>
      <!--item>100000</item>
      <item>184877</item-->
    </list>
  </data>
	
  <data name="valueSizes">
    <list>
      <item>100</item>
      <item>1000</item>
      <item>10000</item>
             <!--item>5000</item>
             <item>10000</item-->
    </list>
  </data>
	
  <data name="numThreads">
    <list>
      <item>10</item>
    </list>
  </data>

  <data name="keyType">str</data>

  <data name="ThinClientRegion">
    <snippet>
      <region name="TestTCR1">
        <region-attributes caching-enabled="false" client-notification="false"/>
      </region>
    </snippet>
  </data>
  <data name="regionSpec">ThinClientRegion</data>

  <client-set name="JCS1" hostGroup="CS"/>
  <client-set name="JCS2" hostGroup="CS"/>
  <client-set name="Putter1"/>
  <client-set name="Getter1"/>
  <client-set name="Destroyer1"/>
  <client-set name="Putter2"/>
  <client-set name="Getter2"/>
  <client-set name="Destroyer2"/>
  <client-set name="Putter3"/>
  <client-set name="Getter3"/>
  <client-set name="Destroyer3"/>
  <client-set name="Putter4"/>
  <client-set name="Getter4"/>
  <client-set name="Destroyer4"/>
	
  <test name="ThinClientPerf" description="Thin Client perf test">
    <task name="SetupCacheServer CS1" action="doRunProcess" container="utils" waitTime="5m">
      <data name="program">setupJavaServers</data>
      <data name="arguments">-c 2 Native/csAckMirror.xml</data>
      <client-set name="JCS1"/>
    </task>
    <task name="StartCacheServer 1" action="doRunProcess" container="utils" waitTime="5m" parallel="true">
      <data name="program">startJavaServers</data>
      <data name="arguments">1</data>
      <client-set name="JCS1"/>
    </task>
    <task name="StartCacheServer 2" action="doRunProcess" container="utils" waitTime="5m" parallel="true">
      <data name="program">startJavaServers</data>
      <data name="arguments">2</data>
      <client-set name="JCS2"/>
    </task>
     <task name="CreateRegion" action="doCreateRegion" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="5m">
      <client-set name="Putter1"/>
      <client-set name="Getter1"/>
      <client-set name="Destroyer1"/>
    </task>
    <task name="Measure Put Throughput" action="doPuts" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Putter1"/>
    </task>
    <task name="Measure Get Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Getter1"/>
    </task>
    <task name="Measure Destroy Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Destroyer1"/>
    </task>
	
    <task name="CreateRegion" action="doCreateRegion" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="5m">
      <client-set name="Putter2"/>
      <client-set name="Getter2"/>
      <client-set name="Destroyer2"/>
    </task>
    <task name="Measure Put Throughput" action="doPuts" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Putter2"/>
    </task>
    <task name="Measure Get Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Getter2"/>
    </task>
    <task name="Measure Destroy Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Destroyer2"/>
    </task>
	   <!-- create region and measure throughput for putter,getter,destroyer - 3 -->
	
    <task name="CreateRegion" action="doCreateRegion" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="5m">
      <client-set name="Putter3"/>
      <client-set name="Getter3"/>
      <client-set name="Destroyer3"/>
    </task>
    <task name="Measure Put Throughput" action="doPuts" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Putter3"/>
    </task>
    <task name="Measure Get Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Getter3"/>
    </task>
    <task name="Measure Destroy Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Destroyer3"/>
    </task>
	   <!-- create region and measure throughput for putter,getter,destroyer - 4 -->
	
    <task name="CreateRegion" action="doCreateRegion" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="5m">
      <client-set name="Putter4"/>
      <client-set name="Getter4"/>
      <client-set name="Destroyer4"/>
    </task>
    <task name="Measure Put Throughput" action="doPuts" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Putter4"/>
    </task>
    <task name="Measure Get Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Getter4"/>
    </task>
    <task name="Measure Destroy Throughput" action="doGets" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="30m">
      <client-set name="Destroyer4"/>
    </task>
	   <!-- stopping all the 4 servers -->

    <task name="Close Cache" action="doCloseCache" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.perftests" argTypes="String,byte[]" waitTime="2m"/>
    <task name="StopCacheServers CS1" action="doRunProcess" container="utils" waitTime="5m" parallel="true">
      <data name="program">stopJavaServers</data>
      <data name="arguments">1</data>
      <client-set name="JCS1"/>
    </task>
    <task name="StopCacheServers CS2" action="doRunProcess" container="utils" waitTime="5m" parallel="true">
      <data name="program">stopJavaServers</data>
      <data name="arguments">2</data>
      <client-set name="JCS2"/>
    </task>
  </test>

</test-driver>
