<?xml version="1.0" encoding="UTF-8"?>
<test-driver version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../testDefinition.xsd">
  <data name="BBName">CacheServer</data>
  <data name="cacheType">CLIENT</data>
  <data name="securityScheme">
   <list>
      <item>DUMMY</item>
      <item>LDAP</item>
      <item>PKCS</item>
   </list>
  </data>

 <data name="redundancyLevel">1</data>
  <data name="minServers">2</data>
  <data name="isFailover">true</data>
  
  <data name="sleepTime">
    <oneof>
      <item>20</item>
      <item>30</item>
      <item>40</item>
      <item>50</item>
      <item>60</item>
      <item>90</item>
      <item>120</item>
    </oneof>
  </data>
  <data name="operation">
    <oneof>
      <item>stop</item>
      <item>term</item>
      <item>kill</item>
    </oneof>
  </data>
 
  <data name="ThinClientRegion">
    <snippet>
      <region name="Portfolios">
        <region-attributes scope="distributed-ack" caching-enabled="false" client-notification="false"/>
      </region>
    </snippet>
  </data>

  <client-set name="JCS1" hostGroup="CS"/>
  <client-set name="JCS2" hostGroup="CS"/>
  <client-set name="JCS3" hostGroup="CS"/>
  <client-set count="2" name="Client"/>
  
  <test name="MultiUser Security tests" description="To verify multiple users Authentication and Authorization in Failover case" timesToRun="3">
    <task name="SetupCacheServer" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="5m" argTypes="String,String">
      <data name="program">setupJavaServers</data>
      <data name="arguments">-e CLASSPATH=\$BUILDDIR/framework/lib/javaobject.jar:\$CLASSPATH -c 3 Security/NativePR/csNotifySubscriptionSecurity.xml</data>
      <client-set name="JCS1"/>
    </task>
    <task name="StartCacheServer 1" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="10m"  argTypes="String,String">
      <data name="program">startJavaServers</data>
      <data name="arguments">1</data>
      <data name="securityParams">:authenticator:authorizer</data>
      <data name ="multiUserMode">true</data>
      <client-set name="JCS1"/>
    </task>
    <task name="StartCacheServer 2" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="10m" parallel="true" argTypes="String,String">
      <data name="program">startJavaServers</data>
      <data name="arguments">2</data>
      <data name="securityParams">:authenticator:authorizer</data>
      <data name ="multiUserMode">true</data>
      <client-set name="JCS2"/>
    </task>
    <task name="StartCacheServer 3" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="10m" parallel="true" argTypes="String,String">
      <data name="program">startJavaServers</data>
      <data name="arguments">3</data>
      <data name="securityParams">:authenticator:authorizer</data>
      <data name ="multiUserMode">true</data>
      <client-set name="JCS3"/>
    </task>
    <task name="CreateClient" action="doCreateRegion" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.multiusersecurity" waitTime="10m" argTypes="String,String">
      <data name="regionSpec">ThinClientRegion</data>
      <data name ="multiUserMode">true</data> 
      <data name="MultiUsers">9</data>
      <data name="LDAP">
        <oneof>
         <item>gemfire</item>  
        </oneof>    
      </data>
      <data name="PKCS">
        <oneof>
         <item>gemfire</item>  
        </oneof>    
      </data>
      <data name="DUMMY">
        <oneof>
         <item>user</item>  
        </oneof>    
      </data>
      <client-set count="2" name="Client"/>
    </task>
    <task name="FeedSystem" action="doFeedTask" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.multiusersecurity" waitTime="40m" argTypes="String,String">
      <data name="entryCount">10000</data>
      <client-set count="1" name="Client"/>
    </task>
    <task name="Client Events" action="doEntryOperationsForMU" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.multiusersecurity" waitTime="30m" parallel="true" argTypes="String,String">
      <data name="entryOps">
        <oneof>
          <item>create</item>
          <item>update</item>
          <item>update</item>
          <item>get</item>
          <item>get</item>
          <item>destroy</item>
          <item>destroy</item>
          <item>putAll</item>
          <item>putAll</item>
          <item>query</item>
          <item>query</item>
          <item>cq</item>
          <item>cq</item>
          <item>executefunction</item>
          <item>executefunction</item>
        </oneof>
      </data>
      <data name="workTime">10m</data>
      <data name="opsSecond">12</data>
      <data name="entryCount">10000</data>
      <client-set count="2" name="Client"/>
    </task>
    <task name="stopStartCacheServer 1" action="doStopStartServer" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" timesToRun="2" waitTime="30m" continueOnError="true" parallel="true" argTypes="String,String">
      <data name="ServerId">1</data>
      <data name="securityParams">:authenticator:authorizer</data>
      <data name ="multiUserMode">true</data>
      <client-set name="JCS1"/>
    </task>
    <task name="stopStartCacheServer 2" action="doStopStartServer" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" timesToRun="2" waitTime="30m" continueOnError="true" parallel="true" argTypes="String,String">
      <data name="ServerId">2</data>
      <data name="securityParams">:authenticator:authorizer</data>
      <data name ="multiUserMode">true</data>
      <client-set name="JCS2"/>
    </task>
    <task name="stopStartCacheServer 3" action="doStopStartServer" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" timesToRun="2" waitTime="30m" continueOnError="true" parallel="true" argTypes="String,String">
      <data name="ServerId">3</data>
      <data name="securityParams">:authenticator:authorizer</data>
      <data name ="multiUserMode">true</data>
      <client-set name="JCS3"/>
    </task>
    <task name=" Validate for per user" action="doValidateEntryOperationsForPerUser" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.multiusersecurity" waitTime="5m" argTypes="String,String" argTypes="String,String">
       <client-set count="2" name="Client"/>
    </task>
    <task name="Close Cache" action="doCloseCache" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.multiusersecurity" waitTime="2m" argTypes="String,String"/>
    <task name="StopCacheServer 1" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="10m" parallel="true" argTypes="String,String">
      <data name="program">stopJavaServers</data>
      <data name="arguments">1</data>
      <client-set name="JCS1"/>
    </task>
    <task name="StopCacheServer 2" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="10m" parallel="true" argTypes="String,String">
      <data name="program">stopJavaServers</data>
      <data name="arguments">2</data>
      <client-set name="JCS2"/>
    </task>
    <task name="StopCacheServer 3" action="doRunProcess" container="NewFwkLib.GemStone.GemFire.Cache.FwkLib.utils" waitTime="10m" parallel="true" argTypes="String,String">
      <data name="program">stopJavaServers</data>
      <data name="arguments">3</data>
      <client-set name="JCS3"/>
    </task>
  </test>
</test-driver>
