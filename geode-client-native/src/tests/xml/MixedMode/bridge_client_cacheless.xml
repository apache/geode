<?xml version="1.0" encoding="UTF-8"?>

<!-- Initializes a bridge client for a bridge server that runs on port 40404.
     Loads values and sends updates to the server. -->

<!DOCTYPE cache PUBLIC
  "-//GemStone Systems, Inc.//GemFire Declarative Caching 5.0//EN"
  "http://www.gemstone.com/dtd/cache5_0.dtd">
<cache is-server="false">
  <region name="TestTCR1">
    <region-attributes scope="local">
      <cache-loader>
        <class-name>com.gemstone.gemfire.cache.util.BridgeLoader</class-name>
        <parameter name="endpoints">
          <string>server=$ENDPOINT</string>
        </parameter>
        <parameter name="readTimeout">
          <string>60000</string>
        </parameter>
      </cache-loader>
      <cache-writer>
        <class-name>com.gemstone.gemfire.cache.util.BridgeWriter</class-name>
        <parameter name="endpoints">
          <string>server=$ENDPOINT</string>
        </parameter>
        <parameter name="establishCallbackConnection">
          <string>true</string>
        </parameter>
        <parameter name="readTimeout">
          <string>60000</string>
        </parameter>
      </cache-writer>
      <eviction-attributes>
        <lru-entry-count maximum="1" action="local-destroy"/>
      </eviction-attributes>
    </region-attributes>
  </region>
</cache>
